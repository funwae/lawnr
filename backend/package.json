{
  "name": "lawnr-backend",
  "version": "1.0.0",
  "description": "Lawnr marketplace backend API",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "demo": "DEMO_MODE=true node server.js",
    "demo:watch": "DEMO_MODE=true node --watch server.js",
    "test": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "migrate": "node scripts/run-migrations.js",
    "migrate:test": "NODE_ENV=test node scripts/run-migrations.js",
    "seed": "node scripts/seed-database.js",
    "seed:test": "NODE_ENV=test node scripts/seed-database.js",
    "setup:test": "npm run migrate:test && npm run seed:test",
    "setup:dev": "npm run migrate && npm run seed",
    "setup:demo": "DEMO_MODE=true node scripts/setup-demo-db.js",
    "health": "node scripts/health-check.js"
  },
  "keywords": [
    "lawnr",
    "marketplace",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@aws-sdk/lib-storage": "^3.940.0",
    "aws-sdk": "^2.1691.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "firebase-admin": "^13.0.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.0",
    "pg": "^8.13.1",
    "sharp": "^0.33.5",
    "stripe": "^17.4.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
